<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aktiviteter.AddFilmActivity"
    android:background="@color/black">

    <Button
        android:id="@+id/choosefilebutton"
        android:layout_width="117dp"
        android:layout_height="57dp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/montserrat"
        android:text="Add image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/UploadButton"
        app:layout_constraintHorizontal_bias="0.748"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextmoviedescription"
        app:layout_constraintVertical_bias="0.146" />

    <Button
        android:id="@+id/UploadButton"
        android:layout_width="121dp"
        android:layout_height="54dp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/montserrat"
        android:text="Upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.758"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextmoviedescription"
        app:layout_constraintVertical_bias="0.152" />

    <EditText
        android:id="@+id/editTextTextmoviedescription"
        android:layout_width="261dp"
        android:layout_height="61dp"
        android:layout_marginBottom="128dp"
        android:background="@color/colorWhite"
        android:ems="10"
        android:maxLength="40"
        android:fontFamily="@font/montserrat"
        android:gravity="start|top"
        android:hint="Describe your movie"
        android:inputType="textMultiLine"
        android:padding="16dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editmovietitle"
        app:layout_constraintVertical_bias="0.299" />

    <EditText
        android:id="@+id/editmovietitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:background="@drawable/roundend"
        android:ems="10"
        android:maxLength="20"
        android:fontFamily="@font/montserrat"
        android:hint="Title of the movie"
        android:inputType="textPersonName"
        android:padding="16dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MovieposterUpload"
        app:layout_constraintVertical_bias="0.011" />

    <TextView
        android:id="@+id/Showsalsaatextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swipe more"
        android:visibility="invisible"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UploadButton"
        app:layout_constraintVertical_bias="0.214" />

    <ProgressBar
        android:id="@+id/progressBar3Uploadingmovie"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="100dp"

        app:layout_constraintBottom_toTopOf="@+id/editmovietitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MovieposterUpload"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/backlitcolor"
        />

    <ImageView
        android:id="@+id/MovieposterUpload"
        android:layout_width="168dp"
        android:layout_height="255dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/latehat" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Add a movie"
        android:paddingHorizontal="20dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/MovieposterUpload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

</androidx.constraintlayout.widget.ConstraintLayout>