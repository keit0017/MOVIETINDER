<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aktiviteter.ReviewskaermAktivitet"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/Postr"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:scaleType="centerCrop"

        android:src="@drawable/fade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/latehat"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageviewself"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:scaleType="centerCrop"

        android:src="@drawable/fade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/ibackimage"
        android:layout_width="32dp"
        android:layout_height="32dp"

        android:background="@drawable/roundedbutton"

        app:layout_constraintBottom_toBottomOf="@+id/Postr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="@+id/Postr"
        app:layout_constraintTop_toTopOf="@+id/Postr"
        app:layout_constraintVertical_bias="0.105"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <TextView
        android:id="@+id/mDesc"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:autoSizeMaxTextSize="16sp"
        android:autoSizeMinTextSize="13sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/montserrat"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"

        android:text="TextView"

        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/Titleyo"
        app:layout_constraintTop_toBottomOf="@+id/Titleyo"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/Titleyo"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/montserrat_bold"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="TextView"

        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/Postr"
        tools:layout_editor_absoluteX="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="250dp"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mDesc"
        app:layout_constraintVertical_bias="0.689">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewChat"
            android:layout_width="match_parent"
            android:layout_height="250dp"


            android:background="@color/colorWhite"
            android:minHeight="250dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp" />


    </LinearLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/black"

        android:foregroundGravity="bottom"
        android:minHeight="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Titleyo"
        app:layout_constraintVertical_bias="1.0">

        <EditText
            android:id="@+id/editTextChattext"
            android:layout_width="266dp"
            android:layout_height="39dp"
            android:background="@drawable/roundend"
            android:ems="10"
            android:hint="Add to discution"
            android:inputType="textPersonName"
            android:paddingHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/Sendchat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Sendchat"
            android:layout_width="87dp"
            android:layout_height="38dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/roundedbutton"
            android:text="Send review"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.483" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>